<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:KPatchLauncher.ViewModels"
        xmlns:converters="using:KPatchLauncher.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="KPatchLauncher.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="KotOR Patch Manager"
        Width="900" Height="650"
        MinWidth="700" MinHeight="500"
        Background="#000016"
        Foreground="#00AFFF">

    <Window.Resources>
        <converters:PatchStateColorConverter x:Key="PatchStateColorConverter"/>
    </Window.Resources>

    <Design.DataContext>
        <vm:MainViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#000016"/>
            <Setter Property="Foreground" Value="#00AFFF"/>
            <Setter Property="BorderBrush" Value="#00AFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="#00AFFF"/>
        </Style>
        <Style Selector="TextBox:focus">
            <Setter Property="BorderBrush" Value="#FFFF00"/>
        </Style>
        <Style Selector="TextBox:pointerover">
            <Setter Property="BorderBrush" Value="#FFFF00"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="Background" Value="#000016"/>
            <Setter Property="Foreground" Value="#00AFFF"/>
            <Setter Property="BorderBrush" Value="#00AFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="BorderBrush" Value="#FFFF00"/>
            <Setter Property="Foreground" Value="#FFFF00"/>
        </Style>
        <Style Selector="Button:pressed">
            <Setter Property="BorderBrush" Value="#FFFF00"/>
            <Setter Property="Foreground" Value="#FFFF00"/>
        </Style>

        <Style Selector="ListBox">
            <Setter Property="Background" Value="#000016"/>
            <Setter Property="Foreground" Value="#00AFFF"/>
            <Setter Property="BorderBrush" Value="#00AFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#002244"/>
        </Style>
        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#001122"/>
        </Style>
        <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#003355"/>
        </Style>

        <!-- Color coding for patch states -->
        <Style Selector="TextBlock.installed">
            <Setter Property="Foreground" Value="#00FF00"/>
        </Style>
        <Style Selector="TextBlock.orphaned">
            <Setter Property="Foreground" Value="#FF0000"/>
        </Style>
        <Style Selector="TextBlock.incompatible">
            <Setter Property="Foreground" Value="#FF8800"/>
        </Style>
        <Style Selector="TextBlock.pending">
            <Setter Property="Foreground" Value="#00AFFF"/>
        </Style>

        <Style Selector="Border">
            <Setter Property="BorderBrush" Value="#00AFFF"/>
            <Setter Property="Background" Value="#000016"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto" Margin="10">

        <!-- Game Path -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Game:" VerticalAlignment="Center" Width="60"/>
            <TextBox Text="{Binding GamePath}"
                     Width="600"
                     Watermark="Path to swkotor.exe"
                     Margin="10,0"/>
            <Button Content="Browse..."
                    Command="{Binding BrowseGameCommand}"
                    Width="100"/>
        </StackPanel>

        <!-- Patches Directory -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Patches:" VerticalAlignment="Center" Width="60"/>
            <TextBox Text="{Binding PatchesPath}"
                     Width="550"
                     Watermark="Directory containing .kpatch files"
                     Margin="10,0"/>
            <Button Content="Browse..."
                    Command="{Binding BrowsePatchesCommand}"
                    Width="100"
                    Margin="0,0,5,0"/>
            <Button Content="Refresh"
                    Command="{Binding RefreshCommand}"
                    Width="100"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto,*" Margin="0,10">

            <!-- Available Patches -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Padding="5">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                               Text="Available Patches"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <ListBox ItemsSource="{Binding AvailablePatches}"
                             SelectedItem="{Binding SelectedAvailablePatch}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayText}"
                                           Foreground="{Binding Converter={StaticResource PatchStateColorConverter}}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Transfer Buttons -->
            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="10"
                        Spacing="10">
                <Button Content="Add &gt;&gt;"
                        Command="{Binding AddPatchCommand}"
                        Width="100"
                        HorizontalContentAlignment="Center"/>
                <Button Content="&lt;&lt; Remove"
                        Command="{Binding RemovePatchCommand}"
                        Width="100"
                        HorizontalContentAlignment="Center"/>
            </StackPanel>

            <!-- Active Patches -->
            <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" Padding="5">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                               Text="Active Patches (in order)"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <StackPanel DockPanel.Dock="Right"
                                VerticalAlignment="Center"
                                Margin="5,0,0,0"
                                Spacing="5">
                        <Button Content="↑"
                                Command="{Binding MoveUpCommand}"
                                Width="30"
                                HorizontalContentAlignment="Center"
                                ToolTip.Tip="Move Up"/>
                        <Button Content="↓"
                                Command="{Binding MoveDownCommand}"
                                Width="30"
                                HorizontalContentAlignment="Center"
                                ToolTip.Tip="Move Down"/>
                    </StackPanel>
                    <ListBox ItemsSource="{Binding ActivePatches}"
                             SelectedItem="{Binding SelectedActivePatch}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayText}"
                                           Foreground="{Binding Converter={StaticResource PatchStateColorConverter}}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3"
                BorderBrush="#00AFFF"
                BorderThickness="0,1,0,0"
                Padding="5"
                Margin="0,10,0,5">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           FontStyle="Italic"/>
                <TextBlock Grid.Column="1"
                           Text="{Binding KotorVersion, StringFormat='Target: {0}'}"
                           FontStyle="Italic"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button Content="Uninstall All"
                    Command="{Binding UninstallAllCommand}"
                    Width="120"
                    Height="35"/>
            <Button Content="Apply"
                    Command="{Binding ApplyPatchesCommand}"
                    Width="120"
                    Height="35"/>
            <Button Content="Launch"
                    Command="{Binding LaunchGameCommand}"
                    Width="120"
                    Height="35"/>
        </StackPanel>
    </Grid>

</Window>
